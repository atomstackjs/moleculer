{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"outDir": "dist/",
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"inlineSources": false,
		"isolatedModules": true,
		"moduleResolution": "Node",
		"preserveWatchOutput": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"module": "CommonJS",
		"sourceMap": true,
		"rootDir": "./typescript",
	},
	"include": [
		"**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"src",
		"test",
		"*.spec.ts"
	],
}
